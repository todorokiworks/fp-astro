const markup = JSON.stringify(structuredDataMarkup.snsUpdate);
---

<Layout
    title="初期費用0円で集客！飲食店のSNS運用支援｜テンポスフードプレイス"
    description="今注目のInstagram（SNS各種）で集客するなら、飲食店特化で安心のテンポスフードプレイスにお任せください！今月限定 フォロワーを増やすためのPOP無料プレゼント中！"
    pageUrl="/marketing/sns_update/"
    ogimage="/asset/images/sns_update/ogp_sns_update.jpg"
    markup={markup}
>
    <article id="mainarea">
        <div class="tp-border sans">
            <nav class="tp-nav">
                <ol class="tp-nav__list flex">
                    <li><a href="/">トップページ</a></li>
                    <li><a href="/marketing/">集客</a></li>
                    <li>SNS運用サポート</li>
                </ol>
            </nav>
            <section class="tp-front__section">
                <h1 class="tp-front__ttl font_m_plus">
                    <span>SNS運用サポート</span>
                </h1>
                <p class="tp-front__caption">
                    初期費用0円で集客！<br />
                    飲食店のSNS運用支援
                </p>
                <p class="tp-front__contact">
                    <a class="click_link_mail" href="/contact/?checked=12"

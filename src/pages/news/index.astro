        backgr0ound: url(/asset/images/common/icon_next.svg) no-repeat center
            center / contain;
        transition: 0.8s;
    }

    a:hover .news-detail-link:after,
    a.news-detail-link:hover:after {
        right: -5px;
        background: url(/asset/images/common/icon_next_active.svg) no-repeat
            center center / contain;

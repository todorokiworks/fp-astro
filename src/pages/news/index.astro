        display: inline-flex;
        color: var(--MAIN_ORANGE);
        text-decoration: underline;
        font-weight: normal;
        /* word-break: normal; */
        flex-wrap: wrap;
    }

    .news-detail-link:after {
        position: absolute;
        content: "";
        aspect-ratio: 1/1;
        width: 1.2em;
        top: 50%;
        transform: translateY(-50%);

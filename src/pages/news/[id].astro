---
import Layout from "../../layouts/Layout.astro";
import { getAllNews } from "../../lib/microcms";

// 静的サイト生成のためのパス生成
export async function getStaticPaths() {
    try {
        // 全てのお知らせを取得
        const { contents: newsList } = await getAllNews(100, 0);

        // 各記事のパスを生成
        return newsList.map((news) => ({
            params: { id: news.id },
            props: { news },
        }));
    } catch (error) {
        console.error("Error generating static paths:", error);
        return [];
    }
}

// 記事データをpropsから取得
const { news } = Astro.props;

// 記事が見つからない場合は404ページにリダイレクト
if (!news) {
    return Astro.redirect("/404");
}
---

<Layout
    title={`${news.title} ｜テンポスフードプレイス`}
    description=""
    pageUrl={`/news/${news.id || ""}/`}
    ogimage=""
>
    <article id="mainarea">
        <div class="tp-border sans">
            <nav class="tp-nav">
                <ol class="tp-nav__list flex">
                    <li><a href="/">トップページ</a></li>
                    <li><a href="/news/">新着情報</a></li>
                    <li>{news.title}</li>
                </ol>
            </nav>

            <!-- mv画像・カテゴリ名部分ここから -->
            <section class="btm-front__section news-detail">
                <h1 class="btm-front__ttl font_m_plus">
                    <span>新着情報</span>
                </h1>
            </section>
            <!-- mv画像・カテゴリ名部分ここまで -->

            <section class="kg-open__section btm-sec tp-wrapper">
                <div class="news-detail__subttl">
                    <div class="news-detail__center">
                        <time
                            datetime={new Date(news.publishedAt)
                                .toISOString()
                                .split("T")[0]}
                        >
                            {
                                new Date(news.publishedAt)
                                    .toLocaleDateString("ja-JP", {
                                        year: "numeric",
                                        month: "2-digit",
                                        day: "2-digit",
                                    })
                                    .replace(/\//g, ".")
                            }
                        </time>
                    </div>
                    <h2>{news.title}</h2>
                </div>

                <div class="news-detail__article">
                    <div set:html={news.content} />
                </div>

                <div class="news-detail__back">
                    <a href="/news/" class="news-detail-link">
                        お知らせ一覧に戻る
                    </a>
                </div>
            </section>
        </div>
    </article>
</Layout>


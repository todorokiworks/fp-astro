---
import Layout from "../../layouts/Layout.astro";
import { getNewsById } from "../../lib/microcms";

// サーバーサイドレンダリングを有効化
export const prerender = false;

// URLパラメータから記事IDを取得
const { id } = Astro.params;

// 記事データを取得
const news = id ? await getNewsById(id) : null;

// 記事が見つからない場合は404ページにリダイレクト
if (!news) {
    return Astro.redirect("/404");
}
---

<Layout
    title={`${news.title} ｜テンポスフードプレイス`}
    description=""
    pageUrl={`/news/${id}/`}
    ogimage=""
>
    <article id="mainarea">
        <div class="tp-border sans">
            <nav class="tp-nav">
                <ol class="tp-nav__list flex">
                    <li><a href="/">トップページ</a></li>
                    <li><a href="/news/">新着情報</a></li>
                    <li>{news.title}</li>
                </ol>
            </nav>

            <!-- mv画像・カテゴリ名部分ここから -->
            <section class="btm-front__section news-detail">
                <h1 class="btm-front__ttl font_m_plus">
                    <span>新着情報</span>
                </h1>
            </section>
            <!-- mv画像・カテゴリ名部分ここまで -->

            <section class="kg-open__section btm-sec tp-wrapper">
                <div class="news-detail__subttl">
                    <div class="news-detail__center">
                        <time
                            datetime={new Date(news.publishedAt)
                                .toISOString()
                                .split("T")[0]}
                        >
                            {
                                new Date(news.publishedAt)
                                    .toLocaleDateString("ja-JP", {
                                        year: "numeric",
                                        month: "2-digit",
                                        day: "2-digit",
                                    })
                                    .replace(/\//g, ".")
                            }
                        </time>
                    </div>
                    <h2>{news.title}</h2>
                </div>

                <div class="news-detail__article">
                    <div set:html={news.content} />
                </div>

                <div class="news-detail__back">
                    <a href="/news/" class="news-detail-link">
                        お知らせ一覧に戻る
                    </a>
                </div>
            </section>
        </div>
    </article>
</Layout>

<style lang="scss">
    /* 新着情報詳細ページ */
    .btm-front__section.news-detail {
        background-image: url(/asset/images/news/mv_news-detail.jpg);
        background-position: 45% 5%;
    }

    .news-detail__subttl {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 40px;
        width: 100%;
        padding-bottom: 20px;
        border-bottom: 1px solid #ccc;
    }

    .news-detail__center {
        text-align: center;
    }

    .news-detail__article {
        margin-bottom: 50px;

        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
            margin-top: 2rem;
            margin-bottom: 1rem;
            font-weight: bold;
        }

        p {
            margin-bottom: 1rem;
            line-height: 1.8;
        }

        ul,
        ol {
            margin-bottom: 1rem;
            padding-left: 2rem;
        }

        li {
            margin-bottom: 0.5rem;
        }

        img {
            max-width: 100%;
            height: auto;
            margin: 1rem 0;
        }

        a {
            color: var(--MAIN_ORANGE);
            text-decoration: underline;

            &:hover {
                text-decoration: none;
            }
        }
    }

    .news-detail__back {
        margin-top: 3rem;
        text-align: center;
    }

    .news-detail-link {
        position: relative;
        padding-right: 25px;
        display: inline-flex;
        color: var(--MAIN_ORANGE);
        text-decoration: underline;
        font-weight: normal;
        flex-wrap: wrap;

        &:after {
            position: absolute;
            content: "";
            aspect-ratio: 1/1;
            width: 1.2em;
            top: 50%;
            transform: translateY(-50%);
            right: 0;
            background: url(/asset/images/common/icon_next.svg) no-repeat center
                center / contain;
            transition: 0.8s;
        }

        &:hover:after {
            right: -5px;
            background: url(/asset/images/common/icon_next_active.svg) no-repeat
                center center / contain;
        }
    }

    @media screen and (max-width: 767px) {
        .news-detail__subttl {
            font-size: 1.3rem;
            line-height: 1.3;
        }

        .news-detail__article {
            h1,
            h2,
            h3,
            h4,
            h5,
            h6 {
                font-size: 1.1rem;
            }
        }
    }
</style>

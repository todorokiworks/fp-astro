interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1.0" />
		<meta name="format-detection" content="telephone=no" />
		<!-- Google Tag Manager -->
		<script is:inline>
			(function (w, d, s, l, i) {
				w[l] = w[l] || [];
				w[l].push({
					"gtm.start": new Date().getTime(),
					event: "gtm.js",
				});
				var f = d.getElementsByTagName(s)[0],
					j = d.createElement(s),
					dl = l != "dataLayer" ? "&l=" + l : "";
				j.async = true;
				j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
				f.parentNode.insertBefore(j, f);
			})(window, document, "script", "dataLayer", "GTM-NXBVCP8");
		</script>
		<!-- End Google Tag Manager -->
		<!-- meta情報 -->
		<title>
			{title}
		</title>
		<meta
			name="description"
			content="お店はSNSで選ぶ時代!今話題のインフルエンサーで集客をしませんか?テンポスでは小規模店舗様限定であなたのお店にピッタリのインフルエンサーをご紹介します。"
		/>
		<meta
			name="keywords"
			content="インフルエンサー,グルメ,テンポスインフルエンサー,インフルエンサー集客,集客,テンポス"
		/>
		<!-- ogp -->
		<meta
			property="og:title"
			content="【小規模店舗様限定】テンポスインフルエンサー紹介|テンポスフードプレイス"
		/>
		<meta property="og:type" content="article" />
		<meta
			property="og:url"
			content="https://support.tenpos.com/lp/service/influencer-pr/"
		/>
		<meta property="og:image" content="" />
		<meta property="og:site_name" content="" />
		<meta
			property="og:description"
			content="お店はSNSで選ぶ時代!今話題のインフルエンサーで集客をしませんか?テンポスでは小規模店舗様限定であなたのお店にピッタリのインフルエンサーをご紹介します。"
		/>
		<!-- google font  -->
		<link
			href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@500;700;900&family=Roboto:wght@500;700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript
			><iframe
				src="https://www.googletagmanager.com/ns.html?id=GTM-NXBVCP8"
				height="0"
				width="0"
				style="display:none;visibility:hidden"></iframe></noscript
		>
		<!-- End Google Tag Manager (noscript) -->

		<body>
			<slot />
		</body>
	</body>
	<style is:global>
		html {
			font-size: 1.3333333333vw;
		}
		@media screen and (max-width: 767px) {
			html {
				font-size: 3.8834951456vw;
			}
		}

		body {
			font-family: "Noto Sans JP", sans-serif;
			color: #000;
			-webkit-font-feature-settings: "palt";
			font-feature-settings: "palt";
		}

		a,
		button {
			-webkit-transition: 0.3s;
			transition: 0.3s;
		}
		a:hover,
		button:hover {
			cursor: pointer;
		}

		/* Box sizing rules */
		*,
		*::before,
		*::after {
			-webkit-box-sizing: border-box;
			box-sizing: border-box;
		}

		/* Remove default margin */
		body,
		h1,
		h2,
		h3,
		h4,
		p,
		figure,
		blockquote,
		dl,
		dd,
		ul,
		li {
			margin: 0;
		}

		/* Remove list styles on ul, ol elements with a list role, which suggests default styling will be removed */
		ul,
		ol {
			list-style: none;
			padding: 0;
		}

		/* Set core root defaults */
		html:focus-within {
			scroll-behavior: smooth;
		}

		/* Set core body defaults */
		body {
			min-height: 100vh;
			text-rendering: optimizeSpeed;
			line-height: 1.5;
		}

		/* A elements that don't have a class get default styles */
		a:not([class]) {
			text-decoration-skip-ink: auto;
		}

		a {
			text-decoration: none;
			color: inherit;
		}

		/* Make images easier to work with */
		img,
		picture {
			max-width: 100%;
			display: block;
		}

		/* Inherit fonts for inputs and buttons */
		input,
		button,
		textarea,
		select {
			font: inherit;
		}

		button {
			border: none;
			padding: 0;
			background-color: transparent;
			background-color: initial;
		}

		/* Remove all animations, transitions and smooth scroll for people that prefer not to see them */
		@media (prefers-reduced-motion: reduce) {
			html:focus-within {
				scroll-behavior: auto;
			}
			*,
			*::before,
			*::after {
				-webkit-animation-duration: 0.01ms !important;
				animation-duration: 0.01ms !important;
				-webkit-animation-iteration-count: 1 !important;
				animation-iteration-count: 1 !important;
				-webkit-transition-duration: 0.01ms !important;
				transition-duration: 0.01ms !important;
				scroll-behavior: auto !important;
			}
		}
		.inner {
			width: 100%;
			margin-right: auto;
			margin-left: auto;
			max-width: calc(62.5rem + 50px);
			padding-right: 1.5625rem;
			padding-left: 1.5625rem;
		}
		@media screen and (max-width: 767px) {
			.inner {
				padding-right: 0.9375rem;
				padding-left: 0.9375rem;
			}
		}

		.bg-lightYellow {
			background: #fff9ef;
		}
		.regist-btn {
			display: inline-block;
			-webkit-font-feature-settings: initial;
			font-feature-settings: initial;
			position: relative;
			width: 100%;
			background: -webkit-gradient(
				linear,
				left top,
				right top,
				from(#fd644f),
				to(#f28e26)
			);
			background: linear-gradient(to right, #fd644f, #f28e26);
			-webkit-box-shadow:
				0 0 0 0.25rem white,
				0 0.25rem 1.0625rem 0.25rem rgba(156, 105, 70, 0.6);
			box-shadow:
				0 0 0 0.25rem white,
				0 0.25rem 1.0625rem 0.25rem rgba(156, 105, 70, 0.6);
			padding: 0.9375rem 0.9375rem;
			border-radius: 3.125rem;
			text-align: center;
			color: #fff;
			font-size: 1.75rem;
			font-weight: 700;
			-webkit-transition: all 0.3s ease 0s;
			transition: all 0.3s ease 0s;
			cursor: pointer;
			letter-spacing: 0.1em;
		}
		@media screen and (max-width: 767px) {
			.regist-btn {
				padding: 0.625rem 1.6875rem;
				font-size: 1.25rem;
			}
		}

		.regist-btn:hover {
			-webkit-transform: scale(0.95);
			transform: scale(0.95);
			opacity: 1;
		}

		.regist-btn--header {
			border: none;
			-webkit-box-shadow: none;
			box-shadow: none;
			font-size: 1.1875rem;
			padding: 0.625rem 0.9375rem;
			letter-spacing: 0.07em;
			min-width: 18.25rem;
		}
		@media screen and (max-width: 767px) {
			.regist-btn--header {
				min-width: 8.75rem;
				font-size: 0.625rem;
				padding: 0.375rem 0.9375rem;
				letter-spacing: 0.09em;
			}
		}

		.regist-btn--header:hover {
			opacity: 0.7;
			-webkit-transform: scale(1);
			transform: scale(1);
		}

		.regist-btn::after {
			content: "";
			position: absolute;
			right: 2.3125rem;
			top: 46%;
			height: 1.125rem;
			width: 1.125rem;
			border-top: 0.1875rem solid #fff;
			border-right: 0.1875rem solid #fff;
			-webkit-transform: rotate(45deg) translateY(-50%);
			transform: rotate(45deg) translateY(-50%);
		}
		@media screen and (max-width: 767px) {
			.regist-btn::after {
				right: 1.5625rem;
				top: 50%;
				height: 0.75rem;
				width: 0.75rem;
			}
		}

		.regist-btn--header::after {
			height: 0.75rem;
			width: 0.75rem;
			right: 1.875rem;
			top: 46%;
		}
		@media screen and (max-width: 767px) {
			.regist-btn--header::after {
				height: 0.375rem;
				width: 0.375rem;
				right: 0.9375rem;
			}
		}

		.u-mobile {
			display: none;
		}
		@media screen and (max-width: 767px) {
			.u-mobile {
				display: block;
			}
		}
	</style>
</html>
